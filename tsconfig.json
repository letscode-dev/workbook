{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": "."
  },
  "include": [
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/.vuepress/env.d.ts"
  ],
  "exclude": ["node_modules", "docs/.vuepress/dist", "docs/.vuepress/cache", "docs/.vuepress/.temp"]
}
